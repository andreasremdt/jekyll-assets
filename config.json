{
  "sass": {
    "inputDir": "assets/sass",
    "outputDir": "css",
    "options": {
      "outputStyle": "compressed",
      "sourcemap": true
    }
  },
  "js": {
    "src": "assets/js",
    "output": {
      "dir": "js",
      "name": "app.js"
    },
    "minify": true,
    "concat": true,
    "babel": true,
    "sourcemaps": true
  },
  "images": {
    "inputDir": "assets/images",
    "outputDir": "images",
    "options": {
      "webp": {
        "quality": 75,
        "preset": "default"
      },
      "others": {}
    }
  },
  "jekyll": {
    "baseDir": "_site",
    "args": ["--watch", "--incremental", "--drafts"],
    "port": 4000
  }
}